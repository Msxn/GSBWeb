{% extends "base.html.twig" %}

{% block title %}
    Formulaire Fiche Frais
{% endblock %}

{% block body %}
   
<a href="/accueil"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>


<h3><center>Formulaire <b>Fiche Frais</b></center></h3>

<center>
<div class="container">
  <div class="well">
    <div class="bg-light">
      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

      {# Les erreurs générales du formulaire. #}
      {{ form_errors(form) }}

        <div class="form-group">
          {{ form_label(form.mois, "Mois", {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.mois) }}
          <div class="col-sm-4">
            {{ form_widget(form.mois) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.ETP, "Forfait Etape:", {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.ETP) }}
          <div class="col-sm-4">
            {{ form_widget(form.ETP, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.KM, "Forfait Kilomètrique:", {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.KM) }}
          <div class="col-sm-4">
            {{ form_widget(form.KM, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.NUI, "Nuitée Hotêl:", {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.NUI) }}
          <div class="col-sm-4">
            {{ form_widget(form.NUI, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.REP, "Forfait Repas:", {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.REP) }}
          <div class="col-sm-4">
            {{ form_widget(form.REP, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
        
        <div class="row">
        <label class="col-md-4 control-label"></label>
          <div class="col-sm-4 col-md-offset-2">
            {{ form_widget(form.valider, {'attr': {'class': 'col-md-4 btn btn-primary'}}) }}
            {{ form_widget(form.annuler, {'attr': {'class': 'col-md-4 btn btn-primary'}}) }}
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
</center>
{% if app.session.flashBag.has('success') %}
 <div class="alert alert-success">
  {% for msg in app.session.flashBag.get('success') %}
     {{ msg }}
  {% endfor %}
 </div>
{% endif %}

{{ form_rest(form) }}

{# Fermeture de la balise <form> du formulaire HTML #}
{{ form_end(form) }}
 
<!-- <a href="/add_article" class="btn btn-outline-light">AJOUTER NOUVEL<br/>ARTICLE</a><br/> -->


{% endblock %}